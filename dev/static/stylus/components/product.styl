.product
  position relative
  overflow hidden
  height 260px
  width 100%
  
  &:after
    content: ""
    position absolute
    bottom 0
    left 0
    width 100%
    height 3px
    background #3cc395
  
  &__image
    display block
    height 126px
    margin 10px auto
  
  &__title, &__price
    display block
    color #afafaf
    font-family "Bebas"
    font-size 27px
    line-height 25px
  
  &__title
    margin-bottom 12px
    text-align center
  
  &__price
    padding 5px 15px
    float left
    width 50%
    text-align right
    font-size 27px
    line-height 25px

  &__order-button
    float left
    display block
    padding 7px
    width 74px
    background #3cc395
    border-radius 3px
    color #fff
    font-family "Bebas"
    font-size 20px
    line-height 20px
