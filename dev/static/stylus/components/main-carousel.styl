.main-carousel
  width 100%
  color #fff
    
  &__item
    overflow hidden
    width 320px
    margin 0 auto
    
    &-wrapper
      outline none

  
  &__image
    margin auto
    display block
    height 100%
  
    &-wrapper
      display block
      float left
      height 160px
      width 50%
      padding-top 20px
      padding-bottom 20px
    
  &__title
    float left
    height 160px
    width 50%
    padding 25px 15px 0 15px
    font-family "Bebas"
    font-size 28px
 
  &__description
    padding 10px 15px
    float left
    width 100%
  
  &__button
    clear both
    display block
    margin 10px auto 20px
    padding 10px 25px
    background none
    border solid 3px #fff
    border-radius 5px
    font-family "Bebas"
    font-size 27px
    line-height 19px
    color #fff
    cursor pointer
