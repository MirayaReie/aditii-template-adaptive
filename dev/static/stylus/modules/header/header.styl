.header
  position relative
  overflow hidden
  background #fff

  &__brand
    display block
    float left
    margin 15px 0 23px 20px
    font 49px "Lobster"
    line-height 39px
    color #3dc1af
    outline none

  &__hamburger
    background none
    position absolute
    top 16px
    right 0
    line-height 45px
    padding 0px 15px 0px 15px
    color #3dc1af
    border 0
    font-size 1.4em
    cursor pointer
    outline none
    z-index 1

  &__cross
    background none
    position absolute
    top 16px
    right 0
    line-height 45px
    padding 10px 17px 0px 17px
    color #3dc1af
    border 0
    font-size 3em
    cursor pointer
    outline none
    z-index 1

@import 'components/search.styl'
.search
  display none
    
.cart
  margin 15px 50px 0 0
  float right
  height 37px
  cursor pointer
  
  &__icon-wrapper
    float left

  &__icon
    height 37px
    width 41px
    fill #3dc1af
  
  &__total
    float left
    padding 12px 0 0 17px
    color #a1a1a1
    font-family "Bebas"
    font-size 33px
    line-height 19px
    
.nav
  top 77px
  position absolute
  background #fff
  z-index 1
  
  box-shadow 1px 1px 3px rgba(0, 0, 0, .08)
  
  &__list
    overflow hidden
  
  &__item
    display block
    float left
    width 50%
  
  &__link
    display block
    padding 14px
    color #3dc1af
    font-size 21px
    font-family "Bebas"
    line-height 20px
    text-align center
